body {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: rgba(0, 0, 0, 0.9);
}

.drum-pad,
#display {
  width: 220px;
  height: 60px;
  margin: 5px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 23px;
  font-family: verdana;
  font-weight: 500;
}

#display {
  background: none;
  color: white;
  text-transform: uppercase;
}

.active {
  background: #FF5964;
}
